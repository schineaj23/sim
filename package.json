    "react": "^16.13.1",
    "react-codemirror": "^1.0.0",
    "react-dom": "^16.13.1",
    "redux": "^4.0.5",
    "style-loader": "^1.2.1",
    "styletron": "^3.0.4",
    "styletron-react": "^5.2.7"
  }
}
