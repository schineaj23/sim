  "scripts": {
    "build": "yarn run clean-dist && webpack -p --config=configs/webpack/prod.js",
    "watch": "webpack --watch --watch-poll --config=configs/webpack/dev.js",
    "clean-dist": "rm -f -r -d dist",
    "lint": "tslint './src/**/*.ts*' --format stylish --force",
    "start": "yarn run start-dev",
    "start-dev": "webpack-dev-server --host 0.0.0.0 --config=configs/webpack/dev.js",
    "start-prod": "yarn run build && node express.js"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@types/react-dom": "^16.9.5",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.1.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.0.1",
    "react-hot-loader": "^4.12.20",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2",
    "worker-loader": "^2.0.0"
  },
  "dependencies": {
    "@types/react": "^16.9.25",
    "babylonjs": "^4.2.0-alpha.20",
    "babylonjs-loaders": "^4.2.0-alpha.20",
    "body-parser": "^1.19.0",
    "codemirror": "^5.58.2",
    "css-loader": "^3.5.3",
    "image-loader": "^0.0.1",
    "image-webpack-loader": "^6.0.0",
    "morgan": "^1.10.0",
